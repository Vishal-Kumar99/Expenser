<UserControl
    x:Class="Expenser.UserControls.UserDetails.ProfileDetailsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Expenser.UserControls.UserDetails"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            Margin="0,10"
            Background="White"
            BorderBrush="LightSteelBlue"
            BorderThickness="2"
            CornerRadius="8">
            <StackPanel>
                <TextBlock
                    Margin="20,10,20,5"
                    FontSize="12"
                    FontWeight="SemiBold"
                    Foreground="LightSteelBlue"
                    Text="Name" />
                <TextBlock
                    Margin="20,0,20,10"
                    FontSize="16"
                    Foreground="SteelBlue"
                    Text="{Binding Name}" />
            </StackPanel>
        </Border>

        <Border
            Grid.Row="1"
            Margin="0,10"
            Background="White"
            BorderBrush="LightSteelBlue"
            BorderThickness="2"
            CornerRadius="8">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0">
                    <TextBlock
                        Margin="20,10,20,5"
                        FontSize="12"
                        FontWeight="SemiBold"
                        Foreground="LightSteelBlue"
                        Text="Gender" />
                    <TextBlock
                        Margin="20,0,20,10"
                        FontSize="16"
                        Foreground="SteelBlue"
                        Text="{Binding Gender}" />
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="1">
                    <TextBlock
                        Margin="20,10,20,5"
                        FontSize="12"
                        FontWeight="SemiBold"
                        Foreground="LightSteelBlue"
                        Text="Date of Birth" />
                    <TextBlock
                        Margin="20,0,20,10"
                        FontSize="16"
                        Foreground="SteelBlue"
                        Text="{Binding DOB, StringFormat='{}{0:dd MMMM yyyy}'}" />
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="0">
                    <TextBlock
                        Margin="20,10,20,5"
                        FontSize="12"
                        FontWeight="SemiBold"
                        Foreground="LightSteelBlue"
                        Text="Country" />
                    <TextBlock
                        Margin="20,0,20,10"
                        FontSize="16"
                        Foreground="SteelBlue"
                        Text="{Binding Country}" />
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="1">
                    <TextBlock
                        Margin="20,10,20,5"
                        FontSize="12"
                        FontWeight="SemiBold"
                        Foreground="LightSteelBlue"
                        Text="Preferred Currency" />
                    <TextBlock
                        Margin="20,0,20,10"
                        FontSize="16"
                        Foreground="SteelBlue"
                        Text="{Binding PreferredCurrency}" />
                </StackPanel>
            </Grid>
        </Border>

        <Border
            Grid.Row="2"
            Margin="0,10"
            Background="White"
            BorderBrush="LightSteelBlue"
            BorderThickness="2"
            CornerRadius="8">
            <StackPanel>
                <TextBlock
                    Margin="20,10,20,5"
                    FontSize="12"
                    FontWeight="SemiBold"
                    Foreground="LightSteelBlue"
                    Text="Phone" />
                <TextBlock
                    Margin="20,0,20,10"
                    FontSize="16"
                    Foreground="SteelBlue"
                    Text="{Binding Contact}" />
                <TextBlock
                    Margin="20,10,20,5"
                    FontSize="12"
                    FontWeight="SemiBold"
                    Foreground="LightSteelBlue"
                    Text="Email" />
                <TextBlock
                    Margin="20,0,20,10"
                    FontSize="16"
                    Foreground="SteelBlue"
                    Text="{Binding Email}" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
