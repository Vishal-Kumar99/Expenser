<Page
    x:Class="Expenser.Pages.NewExpense.ExpenseDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Expenser.Pages.NewExpense"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:n="clr-namespace:Expenser"
    Title="ExpenseDetailPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="White"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30" />
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Margin="20,20,0,0"
                FontSize="24"
                FontWeight="Bold"
                Text="Add expense details" />

            <Label
                Grid.Row="1"
                Grid.Column="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Add Columns"
                FontSize="16" />
            <Label
                Grid.Row="2"
                Grid.Column="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="From"
                FontSize="16" />
            <Label
                Grid.Row="3"
                Grid.Column="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="To"
                FontSize="16" />

            <StackPanel
                Grid.Row="1"
                Grid.Column="2"
                Orientation="Horizontal">
                <TextBox
                    x:Name="ColumnsTxt"
                    Width="200"
                    Height="30"
                    HorizontalAlignment="Left"
                    VerticalContentAlignment="Center" />
                <Button
                    Width="70"
                    Height="30"
                    Margin="10,0"
                    Background="#FF6200EE"
                    Content="Add"
                    Foreground="White" />
            </StackPanel>
            <DatePicker
                Grid.Row="2"
                Grid.Column="2"
                HorizontalAlignment="Left"
                VerticalAlignment="Center" />
            <DatePicker
                Grid.Row="3"
                Grid.Column="2"
                HorizontalAlignment="Left"
                VerticalAlignment="Center" />
        </Grid>


        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>

            <StackPanel
                Grid.Row="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Orientation="Horizontal">
                <Button
                    Width="70"
                    Height="30"
                    Margin="10,0"
                    Background="#FF6200EE"
                    Command="NavigationCommands.BrowseBack"
                    Content="Back" />
                <Button
                    Width="70"
                    Height="30"
                    Margin="10,0"
                    Background="#FF6200EE"
                    Content="Create"
                    Foreground="White" />
                <!--<n:NavButton Text="Create" Width="70" Height="30" Background="#FF6200EE" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" NavUri="/Pages/AddExpensePage.xaml" />-->
                <!--<Button Content="Create" Width="70" Height="30" Background="#FF6200EE" Foreground="White"/>-->
            </StackPanel>
        </Grid>
    </Grid>

</Page>
