<Page
    x:Class="Expenser.Pages.NewExpense.ExpenseTypePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Expenser.Pages.NewExpense"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:n="clr-namespace:Expenser"
    Title="ExpenseTypePage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="White"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <TextBlock
                Margin="20"
                FontSize="24"
                FontWeight="Bold"
                Text="Create new expense" />
            <StackPanel>
                <Label
                    Margin="20,0,10,0"
                    HorizontalAlignment="Left"
                    Content="Expense Type"
                    FontSize="16" />
                <TextBox
                    x:Name="ExpenseTypeTxt"
                    Width="200"
                    Height="30"
                    Margin="25,0,10,10"
                    HorizontalAlignment="Left"
                    VerticalContentAlignment="Center" />
            </StackPanel>
        </StackPanel>

        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <Border
                Grid.Row="0"
                VerticalAlignment="Top"
                BorderBrush="Black"
                BorderThickness="1">
                <StackPanel Height="300">
                    <Border BorderBrush="Black" BorderThickness="0,0,0,1">
                        <TextBlock
                            Width="258"
                            Height="47"
                            Padding="20,10"
                            FontSize="20"
                            Text="Types" />
                    </Border>
                    <ListBox
                        Grid.Row="1"
                        Height="auto"
                        VerticalAlignment="Top"
                        d:ItemsSource="{d:SampleData ItemCount=5}" />
                </StackPanel>
            </Border>

            <!--<n:NavButton Text="Next" Grid.Row="2" Width="70" Height="30" FontSize="14" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="#FF6200EE" Foreground="White" NavUri="/Pages/NewExpense/ExpenseNamePage.xaml" />-->

            <Button
                x:Name="NextBtn"
                Grid.Row="2"
                Width="90"
                Height="35"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Background="#FF6200EE"
                Click="NextBtn_Click"
                Content="Next"
                Cursor="Hand"
                FontSize="16"
                Foreground="White"
                Style="{DynamicResource NavButton}" />
        </Grid>
    </Grid>

</Page>
