<Page
    x:Class="Expenser.Pages.NewExpense.ExpenseNamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Expenser.Pages.NewExpense"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:n="clr-namespace:Expenser"
    Title="ExpenseNamePage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="White"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <TextBlock
                Margin="20,20,0,0"
                FontSize="24"
                FontWeight="Bold"
                Text="Name your new expense" />
            <TextBlock
                Margin="20,10,0,20"
                FontSize="18"
                Text="Travel Expense" />
            <StackPanel>
                <Label
                    Margin="20,0,10,0"
                    HorizontalAlignment="Left"
                    Content="Expense Name"
                    FontSize="16" />
                <TextBox
                    x:Name="ExpenseNameTxt"
                    Width="300"
                    Height="30"
                    Margin="25,0,10,10"
                    HorizontalAlignment="Left"
                    VerticalContentAlignment="Center" />
            </StackPanel>
            <StackPanel>
                <Label
                    Margin="20,0,10,0"
                    HorizontalAlignment="Left"
                    Content="Location"
                    FontSize="16" />
                <TextBox
                    x:Name="LocationTxt"
                    Width="300"
                    Height="30"
                    Margin="25,0,10,10"
                    HorizontalAlignment="Left"
                    VerticalContentAlignment="Center" />
            </StackPanel>
        </StackPanel>

        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>

            <StackPanel
                Grid.Row="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Orientation="Horizontal">
                <Button
                    Width="90"
                    Height="35"
                    Margin="10,0"
                    Background="#FF6200EE"
                    Command="NavigationCommands.BrowseBack"
                    Content="Back"
                    Cursor="Hand"
                    FontSize="16"
                    Foreground="White"
                    Style="{DynamicResource NavButton}" />
                <!--<n:NavButton Text="Next" Width="70" Height="30" Background="#FF6200EE" Foreground="White" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" NavUri="/Pages/NewExpense/ExpenseDetailPage.xaml" />-->

                <Button
                    x:Name="NextBtn"
                    Grid.Row="2"
                    Width="90"
                    Height="35"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Background="#FF6200EE"
                    Click="NextBtn_Click"
                    Content="Next"
                    Cursor="Hand"
                    FontSize="16"
                    Foreground="White"
                    Style="{DynamicResource NavButton}" />
            </StackPanel>
        </Grid>
    </Grid>

</Page>
