<Window
    x:Class="Expenser.Pages.ExpenseType.ExpenseTypeWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Expenser.Pages.ExpenseType"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ExpenseTypeWindow"
    Width="800"
    Height="450"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border
        Background="WhiteSmoke"
        BorderBrush="SteelBlue"
        BorderThickness="1"
        CornerRadius="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border
                Grid.ColumnSpan="2"
                Background="LightSteelBlue"
                BorderBrush="SteelBlue"
                BorderThickness="0,0,0,1"
                CornerRadius="10,10,0,0" />

            <Button
                x:Name="CloseBtn"
                Grid.Column="1"
                Width="50"
                Height="40"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Click="CloseBtn_Click"
                FontSize="24"
                Style="{StaticResource CloseBtn}" />

            <Border
                Grid.Row="1"
                Grid.Column="0"
                Style="{StaticResource DialogBorder}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border
                        Grid.Row="0"
                        Background="SteelBlue"
                        BorderBrush="SteelBlue"
                        BorderThickness="1"
                        CornerRadius="4,4,0,0">
                        <TextBlock
                            Padding="10"
                            FontSize="24"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Text="Type List" />
                    </Border>
                    <Border
                        Grid.Row="1"
                        BorderBrush="SteelBlue"
                        BorderThickness="1,0,1,1"
                        CornerRadius="0,0,4,4">
                        <ListBox
                            x:Name="TypeList"
                            d:ItemsSource="{d:SampleData ItemCount=5}"
                            FontSize="16"
                            ScrollViewer.CanContentScroll="False"
                            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                            ScrollViewer.VerticalScrollBarVisibility="Auto" />
                    </Border>
                </Grid>
            </Border>

            <Border
                Grid.Row="1"
                Grid.Column="1"
                Style="{StaticResource DialogBorder}">

                <StackPanel Margin="10" Orientation="Vertical">
                    <Border
                        Margin="0,10"
                        Padding="60,20"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        BorderBrush="LightSteelBlue"
                        BorderThickness="1"
                        CornerRadius="4">
                        <StackPanel>
                            <TextBlock
                                Margin="0,5"
                                HorizontalAlignment="Left"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Foreground="SteelBlue"
                                Text="Add New Type" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>

                                <TextBox
                                    x:Name="NewTypeBox"
                                    Grid.Column="0"
                                    Width="200"
                                    Height="30"
                                    Margin="5,0"
                                    FontSize="16" />

                                <Button
                                    x:Name="AddTypeBtn"
                                    Grid.Column="1"
                                    Width="80"
                                    Height="30"
                                    Margin="10,0"
                                    Click="AddTypeBtn_Click"
                                    Content="Add"
                                    Foreground="White" />
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border
                        Margin="0,5"
                        Padding="60,20"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        BorderBrush="LightSteelBlue"
                        BorderThickness="1"
                        CornerRadius="4">
                        <StackPanel>
                            <TextBlock
                                Margin="0,5"
                                HorizontalAlignment="Left"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Foreground="SteelBlue"
                                Text="Edit Type" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>

                                <ComboBox
                                    x:Name="EditTypeCBox"
                                    Grid.Column="0"
                                    Width="200"
                                    Height="30"
                                    Margin="5,0"
                                    FontSize="16"
                                    IsEditable="True"
                                    IsTextSearchEnabled="True" />

                                <Button
                                    x:Name="EditTypeBtn"
                                    Grid.Column="1"
                                    Width="80"
                                    Height="30"
                                    Margin="10,0"
                                    Click="EditTypeBtn_Click"
                                    Content="Save"
                                    Foreground="White" />
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border
                        Margin="0,10"
                        Padding="60,20"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        BorderBrush="IndianRed"
                        BorderThickness="1"
                        CornerRadius="4">
                        <StackPanel>
                            <TextBlock
                                Margin="0,5"
                                HorizontalAlignment="Left"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Foreground="IndianRed"
                                Text="Delete Type" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>

                                <ComboBox
                                    x:Name="DeleteTypeCBox"
                                    Grid.Column="0"
                                    Width="200"
                                    Height="30"
                                    Margin="5,0"
                                    FontSize="16"
                                    IsEditable="True"
                                    IsTextSearchEnabled="True" />

                                <Button
                                    x:Name="DeleteTypeBtn"
                                    Grid.Column="1"
                                    Width="80"
                                    Height="30"
                                    Margin="10,0"
                                    Background="IndianRed"
                                    BorderBrush="IndianRed"
                                    Click="DeleteTypeBtn_Click"
                                    Content="Delete"
                                    Foreground="White" />
                            </Grid>
                        </StackPanel>
                    </Border>

                </StackPanel>

            </Border>
        </Grid>
    </Border>
</Window>
