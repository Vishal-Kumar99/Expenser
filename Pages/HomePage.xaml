<Page
    x:Class="Expenser.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:h="clr-namespace:Expenser.Helpers"
    xmlns:local="clr-namespace:Expenser.Pages"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:Expenser.UserControls"
    xmlns:vm="clr-namespace:Expenser.ViewModel"
    Title="HomePage"
    d:DesignHeight="900"
    d:DesignWidth="1800"
    Background="#F9F7ED"
    mc:Ignorable="d">
    <!--  MouseDown="Page_MouseDown"  -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="300" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>

        <Border
            Grid.Column="0"
            Background="White"
            BorderBrush="LightGray"
            BorderThickness="0,0,2,0">
            <DockPanel>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Margin="20,10"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="Top Expenses" />

                    <TextBox
                        Grid.Row="1"
                        Width="250"
                        Height="40"
                        Margin="20,0"
                        Text="{Binding SearchBox, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                        VerticalContentAlignment="Center"
                        Style="{StaticResource WatermarkedTextBox}"
                        FontSize="16" />

                    <ListBox
                        x:Name="TopExpenseList"
                        Grid.Row="2"
                        Margin="20,10"
                        FontSize="16"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        ItemsSource="{Binding ExpenseView}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <DockPanel>
                                    <TextBlock Text="{Binding Title}" TextWrapping="Wrap" />
                                </DockPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </DockPanel>
        </Border>

        <DockPanel Grid.Column="1">
            <Grid Margin="30,60,30,30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="250" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Padding="10"
                    FontSize="30"
                    FontWeight="Bold"
                    Text="Home" />

                <Border Grid.Row="1" Style="{StaticResource HomeBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Button
                            x:Name="AddExpenseBtn"
                            Grid.Column="0"
                            Margin="40,0"
                            Click="AddExpenseBtn_Click"
                            Content="Add Expense"
                            Style="{StaticResource NavHomeButton}" />

                        <Button
                            x:Name="ViewExpenseBtn"
                            Grid.Column="1"
                            Margin="40,0"
                            Click="ViewExpenseBtn_Click"
                            Content="View Expense"
                            Style="{StaticResource NavHomeButton}" />

                        <Button
                            x:Name="ImportExpenseBtn"
                            Grid.Column="2"
                            Margin="40,0"
                            Click="ImportExpenseBtn_Click"
                            Content="Import Expense"
                            Style="{StaticResource NavHomeButton}" />

                        <Button
                            x:Name="ExpenseTypeBtn"
                            Grid.Column="3"
                            Margin="40,0"
                            Click="ExpenseTypeBtn_Click"
                            Content="Expense Type"
                            Style="{StaticResource NavHomeButton}" />
                    </Grid>
                </Border>

                <!--<Grid Grid.Row="2" Margin="0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Margin="10"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Text="Monthly Expense Summary" />-->

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Style="{StaticResource HomeBorder}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <!--  Total Expense Card  -->
                            <uc:ExpenseCardControl
                                Grid.Column="0"
                                Width="300"
                                Margin="0,10"
                                BackgroundColor="IndianRed"
                                ExpenseMonth="January"
                                ExpenseTitle="Total Expense"
                                ForegroundColor="White"
                                MonthBackground="White"
                                MonthForeground="IndianRed"
                                TotalExpense="₹1500" />

                            <!--  Remaining Balance Card  -->
                            <uc:ExpenseCardControl
                                Grid.Column="1"
                                Width="300"
                                Margin="0,10"
                                BackgroundColor="Teal"
                                ExpenseMonth="January"
                                ExpenseTitle="Remaining Balance"
                                ForegroundColor="White"
                                MonthBackground="White"
                                MonthForeground="Teal"
                                TotalExpense="₹2000" />
                        </Grid>
                    </Border>

                    <Border Grid.Column="1" Style="{StaticResource HomeBorder}">
                        <lvc:PieChart
                            x:Name="ExpenseDonut"
                            DataContext="{Binding DonutViewModel, Source={StaticResource ViewModelLocator}}"
                            LegendPosition="Right"
                            Series="{Binding DonutSeries}" />
                    </Border>
                </Grid>
                <!--</Grid>-->

                <Border Grid.Row="3" Style="{StaticResource HomeBorder}">
                    <lvc:CartesianChart
                        Title="{Binding Title}"
                        DataContext="{Binding LineChartViewModel, Source={StaticResource ViewModelLocator}}"
                        Series="{Binding LineSeries}"
                        XAxes="{Binding XAxis}" />
                </Border>
            </Grid>
        </DockPanel>

        <Border
            Grid.Column="2"
            BorderBrush="Transparent"
            BorderThickness="0">
            <DockPanel>
                <Grid>
                    <Grid.Resources>
                        <Style x:Key="ProfileBorder" TargetType="Border">
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect
                                        BlurRadius="10"
                                        Opacity="0.25"
                                        ShadowDepth="2"
                                        Color="Black" />
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Grid.Resources>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border
                        Grid.Row="0"
                        Margin="0,10"
                        Background="White"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        CornerRadius="50,0,0,50"
                        Style="{StaticResource ProfileBorder}">
                        <StackPanel
                            Margin="10"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                            <uc:UserProfileControl x:Name="UserProfile" ProfileClicked="UserProfile_ProfileClicked" />
                            <uc:ProfileMenuControl
                                x:Name="ProfileMenu"
                                Margin="10,10,0,0"
                                Visibility="Collapsed" />
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="1" Style="{StaticResource HomeBorder}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    Margin="10"
                                    FontSize="20"
                                    FontWeight="SemiBold"
                                    Text="Expense Types" />

                                <ListBox
                                    x:Name="ExpenseTypeList"
                                    Grid.Row="1"
                                    Margin="10,10"
                                    d:ItemsSource="{d:SampleData ItemCount=5}"
                                    FontSize="16"
                                    ScrollViewer.CanContentScroll="False"
                                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                    ScrollViewer.VerticalScrollBarVisibility="Auto" />
                            </Grid>

                            <Viewbox Grid.Row="1">
                                <Calendar />
                            </Viewbox>
                        </Grid>
                    </Border>
                </Grid>
            </DockPanel>
        </Border>
    </Grid>

</Page>
