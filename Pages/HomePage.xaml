<Page
    x:Class="Expenser.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Expenser.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:n="clr-namespace:Expenser"
    Title="HomePage"
    d:DesignHeight="900"
    d:DesignWidth="1400"
    Background="#F9F7ED"
    mc:Ignorable="d">

    <Grid>
        <StackPanel
            Grid.Row="1"
            Width="1100"
            Margin="0,60">
            <TextBlock
                x:Name="WelcomeTxt"
                FontSize="30"
                FontWeight="Bold">
                <Run Text="Welcome,"/>
                <Run x:Name="UserTxt" Foreground="DodgerBlue"/>
            </TextBlock>

            <StackPanel
                Margin="0,30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                
                <Border
                    Width="300"
                    Height="150"
                    Margin="30"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <Button
                        Background="White"
                        Content="New Expense"
                        FontSize="20" />
                </Border>

                <Border
                    Width="300"
                    Height="150"
                    Margin="30"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <Button
                        Background="White"
                        Content="View Expense"
                        FontSize="20" />
                </Border>

                <Border
                    Width="300"
                    Height="150"
                    Margin="30"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <Button
                        Background="White"
                        Content="Import Expense"
                        FontSize="20" />
                </Border>
            </StackPanel>

            <Border
                Height="52"
                Margin="0,50,0,0"
                BorderBrush="Black"
                BorderThickness="1">
                <DockPanel Background="White">
                    <TextBlock
                        Padding="0,10"
                        HorizontalAlignment="Center"
                        FontSize="24"
                        Text="Recent Expenses" />
                </DockPanel>
            </Border>

            <StackPanel>
                <ListBox
                    Height="100"
                    d:ItemsSource="{d:SampleData ItemCount=5}"
                    Background="LightGray" />
            </StackPanel>
        </StackPanel>

    </Grid>

</Page>
