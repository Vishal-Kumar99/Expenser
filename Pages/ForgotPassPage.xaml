<Page
    x:Class="Expenser.Pages.ForgotPassPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Expenser.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ForgotPassPage"
    d:DesignHeight="600"
    d:DesignWidth="600"
    Background="Transparent"
    mc:Ignorable="d">

    <Border
        Width="600"
        Height="600"
        Padding="100,10"
        Background="#F9F7ED"
        BorderThickness="2"
        CornerRadius="10">
        <DockPanel LastChildFill="True">
            <Grid Height="500">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="24"
                    FontWeight="Bold"
                    Text="Reset Password" />

                <StackPanel Grid.Row="1">
                    <TextBlock
                        Margin="10,20,10,5"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Username" />
                    <TextBox
                        x:Name="UsernameTxt"
                        Height="30"
                        Margin="10,0"
                        VerticalContentAlignment="Center"
                        FontSize="16" />
                </StackPanel>

                <StackPanel Grid.Row="2">
                    <TextBlock
                        Margin="10,20,10,5"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="New Password" />
                    <TextBox
                        x:Name="NewPassTxt"
                        Height="30"
                        Margin="10,0"
                        VerticalContentAlignment="Center"
                        FontSize="16" />
                </StackPanel>

                <StackPanel
                    Grid.Row="3"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock
                        x:Name="FirstNumLabel"
                        Padding="5"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="1" />
                    <TextBlock
                        Padding="5"
                        FontSize="16"
                        FontWeight="Bold"
                        Text=" + " />
                    <TextBlock
                        x:Name="SecondNumLabel"
                        Padding="5"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="1" />
                    <TextBlock
                        Padding="5"
                        FontSize="16"
                        FontWeight="Bold"
                        Text=" = " />
                    <TextBlock
                        x:Name="AnswerLabel"
                        Padding="5"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="?" />
                </StackPanel>

                <StackPanel
                    Grid.Row="4"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBox
                        x:Name="AnswerTxt"
                        Width="100"
                        Height="30"
                        Margin="10,0"
                        VerticalContentAlignment="Center"
                        FontSize="16" />
                    <Button
                        x:Name="VerifyBtn"
                        Height="30"
                        Width="50"
                        Margin="10,0"
                        Background="#FF6200EE"
                        Click="VerifyBtn_Click"
                        Content="OK"
                        FontSize="14"
                        Foreground="White"
                        Style="{DynamicResource NavButton}" />
                </StackPanel>

                <DockPanel Grid.Row="5" LastChildFill="True">
                    <Button
                        x:Name="ResetPassBtn"
                        Height="50"
                        Margin="10,0"
                        IsDefault="True"
                        Background="#FF6200EE"
                        Click="ResetPassBtn_Click"
                        Content="Reset"
                        FontSize="18"
                        Foreground="White"
                        Style="{DynamicResource NavButton}" />
                </DockPanel>


                <StackPanel
                    Grid.Row="6"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="20,0,0,0"
                        HorizontalAlignment="Center"
                        FontSize="16"
                        Text="Remember Password? " />
                    <Button
                        x:Name="LoginLinkBtn"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Click="LoginLinkBtn_Click"
                        Content="Log In"
                        Cursor="Hand"
                        FontSize="16"
                        Foreground="#FF6200EE"
                        Style="{DynamicResource NavLinkBtn}" />
                </StackPanel>
            </Grid>
        </DockPanel>
    </Border>
</Page>
