<Page
    x:Class="Expenser.Pages.UserProfilePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Expenser.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="User Profile"
    d:DesignHeight="900"
    d:DesignWidth="1800"
    Background="#F9F7ED"
    mc:Ignorable="d">
    <Grid Margin="400,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Height="200"
            Background="{DynamicResource CoverImageBrush}"
            BorderBrush="Transparent"
            BorderThickness="0"
            CornerRadius="10">
            <Grid Height="200" ClipToBounds="True">

                <Button
                    x:Name="EditCoverImageBtn"
                    Margin="20"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Panel.ZIndex="1"
                    Background="SteelBlue"
                    BorderBrush="SteelBlue"
                    Click="EditCoverImageBtn_Click"
                    Content="Edit"
                    FontSize="14"
                    Foreground="White" />
            </Grid>

        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border
                Grid.Column="0"
                Background="Transparent"
                BorderBrush="LightGray"
                BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid
                        Grid.Row="0"
                        Width="150"
                        Height="150"
                        Margin="30,-75"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top">
                        <Ellipse Fill="SteelBlue" />
                        <Image
                            x:Name="ProfileImage"
                            Width="150"
                            Height="150"
                            ClipToBounds="True"
                            Source="{Binding ProfileImage}"
                            Stretch="UniformToFill"
                            Visibility="{Binding ProfileImageVisibility}">
                            <Image.Clip>
                                <EllipseGeometry
                                    Center="75,75"
                                    RadiusX="75"
                                    RadiusY="75" />
                            </Image.Clip>
                        </Image>
                        <TextBlock
                            x:Name="InitialText"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="52"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="{Binding InitialText}"
                            Visibility="{Binding InitialTextVisibility}" />
                        <Button
                            Margin="0,10"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Background="White"
                            BorderBrush="SteelBlue"
                            Content="Edit"
                            Foreground="SteelBlue" />
                    </Grid>
                </Grid>
            </Border>

            <StackPanel
                Grid.Row="1"
                Grid.Column="0"
                Margin="30,100"
                VerticalAlignment="Top">
                <TextBlock
                    x:Name="UsernameTxt"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="SteelBlue"
                    Text="{Binding UserName}" />

                <Button
                    x:Name="HomeBtn"
                    Height="40"
                    Margin="0,20,0,10"
                    Background="SteelBlue"
                    BorderBrush="SteelBlue"
                    Click="HomeBtn_Click"
                    Content="Home"
                    FontSize="16"
                    Foreground="White" />

                <Button
                    x:Name="EditProfileBtn"
                    Height="40"
                    Margin="0,10"
                    Background="SteelBlue"
                    BorderBrush="SteelBlue"
                    Content="Edit Profile"
                    Click="EditProfileBtn_Click"
                    FontSize="16"
                    Foreground="White" />
                <Button
                    x:Name="SettingBtn"
                    Height="40"
                    Margin="0,10"
                    Background="SteelBlue"
                    BorderBrush="SteelBlue"
                    Content="Settings"
                    Click="SettingBtn_Click"
                    FontSize="16"
                    Foreground="White" />
                <Button
                    x:Name="LogoutBtn"
                    Height="40"
                    Margin="0,10"
                    Background="IndianRed"
                    BorderBrush="IndianRed"
                    Content="Logout"
                    FontSize="16"
                    Foreground="White" />
            </StackPanel>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>


                <Grid
                    Grid.Row="0"
                    Margin="20,10"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        x:Name="ProfileBtn"
                        Grid.Column="0"
                        Height="50"
                        Margin="10,0"
                        Background="Transparent"
                        BorderBrush="SteelBlue"
                        BorderThickness="0,0,0,1"
                        Click="ProfileBtn_Click"
                        Content="Profile"
                        FontSize="16"
                        Foreground="SteelBlue" />
                    <Button
                        x:Name="IncomeBtn"
                        Grid.Column="1"
                        Height="50"
                        Margin="10,0"
                        Background="Transparent"
                        BorderBrush="SteelBlue"
                        BorderThickness="0,0,0,1"
                        Click="IncomeBtn_Click"
                        Content="Income"
                        FontSize="16"
                        Foreground="SteelBlue" />
                    <Button
                        x:Name="BudgetBtn"
                        Grid.Column="2"
                        Height="50"
                        Margin="10,0"
                        Background="Transparent"
                        BorderBrush="SteelBlue"
                        BorderThickness="0,0,0,1"
                        Click="BudgetBtn_Click"
                        Content="Budget"
                        FontSize="16"
                        Foreground="SteelBlue" />
                    <Button
                        x:Name="LocationBtn"
                        Grid.Column="3"
                        Height="50"
                        Margin="10,0"
                        Background="Transparent"
                        BorderBrush="SteelBlue"
                        BorderThickness="0,0,0,1"
                        Click="LocationBtn_Click"
                        Content="Locations"
                        FontSize="16"
                        Foreground="SteelBlue" />
                </Grid>

                <Frame
                    x:Name="UserDetailsFrame"
                    Grid.Row="1"
                    Margin="20,10"
                    NavigationUIVisibility="Hidden"
                    Source="/UserControls/UserDetails/ProfileDetailsControl.xaml" />

            </Grid>
        </Grid>
    </Grid>
</Page>
