<Page
    x:Class="Expenser.Pages.AddExpensePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Expenser.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AddExpensePage"
    d:DesignHeight="900"
    d:DesignWidth="1400"
    Background="#F9F7ED"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="400" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Margin="20"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="32"
                FontWeight="Bold"
                Text="Travel Expense" />

            <DockPanel Grid.Row="1" LastChildFill="True">
                <DataGrid Width="auto" d:ItemsSource="{d:SampleData ItemCount=5}" />
            </DockPanel>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Label
                Grid.Row="0"
                Grid.Column="0"
                Padding="20,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Column1"
                FontSize="16" />
            <Label
                Grid.Row="0"
                Grid.Column="1"
                Padding="20,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="value"
                FontSize="16" />

            <Label
                Grid.Row="1"
                Grid.Column="0"
                Padding="20,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Column2"
                FontSize="16" />
            <Label
                Grid.Row="1"
                Grid.Column="1"
                Padding="20,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="value"
                FontSize="16" />

            <Label
                Grid.Row="2"
                Grid.Column="0"
                Padding="20,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Column3"
                FontSize="16" />
            <Label
                Grid.Row="2"
                Grid.Column="1"
                Padding="20,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="value"
                FontSize="16" />

            <Label
                Grid.Row="3"
                Grid.Column="0"
                Padding="20,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Column4"
                FontSize="16" />
            <Label
                Grid.Row="3"
                Grid.Column="1"
                Padding="20,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="value"
                FontSize="16" />

            <Label
                Grid.Row="4"
                Grid.Column="0"
                Padding="20,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Column5"
                FontSize="16" />
            <Label
                Grid.Row="4"
                Grid.Column="1"
                Padding="20,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="value"
                FontSize="16" />

            <Label
                Grid.Row="5"
                Grid.Column="0"
                Padding="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Other Expenses"
                FontSize="16" />

            <Label
                Grid.Row="6"
                Grid.Column="0"
                Padding="20,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="OtherExpense1"
                FontSize="16" />
            <TextBox
                Grid.Row="6"
                Grid.Column="1"
                Width="100"
                Height="30"
                Margin="20,0,0,0"
                HorizontalAlignment="Left"
                VerticalContentAlignment="Center"
                FontSize="16" />

            <Label
                Grid.Row="7"
                Grid.Column="0"
                Padding="20,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="OtherExpense2"
                FontSize="16" />
            <TextBox
                Grid.Row="7"
                Grid.Column="1"
                Width="100"
                Height="30"
                Margin="20,0,0,0"
                HorizontalAlignment="Left"
                VerticalContentAlignment="Center"
                FontSize="16" />

            <Label
                Grid.Row="8"
                Grid.Column="1"
                Padding="20,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="+ Add Other Expenses"
                FontSize="16"
                Foreground="#FF6200EE" />

            <Label
                Grid.Row="9"
                Grid.Column="0"
                Padding="20,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Total"
                FontSize="16" />
            <Label
                Grid.Row="9"
                Grid.Column="1"
                Padding="20,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="value"
                FontSize="16" />

            <Label
                Grid.Row="10"
                Grid.Column="0"
                Padding="20,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Advance"
                FontSize="16" />
            <TextBox
                Grid.Row="10"
                Grid.Column="1"
                Width="100"
                Height="30"
                Margin="20,0,0,0"
                HorizontalAlignment="Left"
                VerticalContentAlignment="Center"
                FontSize="16" />

            <Border
                Grid.Row="11"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                BorderBrush="Black"
                BorderThickness="1">
                <DockPanel>
                    <Button
                        Margin="10"
                        Background="#FF6200EE"
                        Content="Create"
                        FontSize="16"
                        Foreground="White" />
                </DockPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
