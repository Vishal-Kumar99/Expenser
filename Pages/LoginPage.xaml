<Page
    x:Class="Expenser.Pages.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Expenser.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:n="clr-namespace:Expenser"
    Title="Expenser: Login"
    d:DesignHeight="600"
    d:DesignWidth="600"
    Background="Transparent"
    mc:Ignorable="d">

    <Border
        Width="600"
        Height="600"
        Padding="100,10"
        Background="#F9F7ED"
        BorderThickness="2"
        CornerRadius="10">

        <DockPanel LastChildFill="True">
            <Grid Height="500">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition Height="30" />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="24"
                    FontWeight="Bold">
                    <Run Text="Welcome To" />
                    <Run Foreground="DodgerBlue" Text="Expenser" />
                </TextBlock>

                <StackPanel Grid.Row="1">
                    <TextBlock
                        Margin="10,20,10,5"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Username" />
                    <TextBox
                        x:Name="UsernameTxt"
                        Height="30"
                        Margin="10,0"
                        VerticalContentAlignment="Center"
                        FontSize="16" />
                </StackPanel>

                <StackPanel Grid.Row="2">
                    <TextBlock
                        Margin="10,20,10,5"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Password" />
                    <PasswordBox
                        x:Name="PasswordTxt"
                        Height="30"
                        Margin="10,0"
                        VerticalContentAlignment="Center"
                        FontSize="16" />
                </StackPanel>

                <Grid
                    Grid.Row="3"
                    Margin="10,0"
                    VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <CheckBox
                        x:Name="RememberMeChk"
                        Grid.Column="0"
                        Content="Remember Me"
                        FontSize="16" />
                    <Button
                        x:Name="ForgotPassBtn"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Click="ForgotPassBtn_Click"
                        Content="Forgot Password?"
                        Cursor="Hand"
                        FontSize="16"
                        Foreground="#FF6200EE"
                        Style="{DynamicResource NavLinkBtn}" />
                </Grid>

                <DockPanel Grid.Row="4" LastChildFill="True">
                    <!--<n:NavButton
                            Height="50"
                            Margin="10,0"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Background="#FF6200EE"
                            FontSize="16"
                            Foreground="White"
                            Text="Login"
                            Click="NavButton_Click"/>-->
                    <Button
                        x:Name="LoginBtn"
                        Height="50"
                        Margin="10,0"
                        Background="#FF6200EE"
                        Click="LoginBtn_Click"
                        Content="Login"
                        FontSize="18"
                        Foreground="White"
                        IsDefault="True"
                        Style="{DynamicResource NavButton}" />
                </DockPanel>


                <StackPanel
                    Grid.Row="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="20,0,0,0"
                        HorizontalAlignment="Center"
                        FontSize="16"
                        Text="Don't have an account? " />
                    <Button
                        x:Name="CreateAccountBtn"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Click="CreateAccountBtn_Click"
                        Content="Create Account"
                        Cursor="Hand"
                        FontSize="16"
                        Foreground="#FF6200EE"
                        Style="{DynamicResource NavLinkBtn}" />
                </StackPanel>
            </Grid>
        </DockPanel>

    </Border>


</Page>
