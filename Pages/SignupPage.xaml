<Page
    x:Class="Expenser.Pages.SignupPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Expenser.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SignupPage"
    d:DesignHeight="600"
    d:DesignWidth="600"
    Background="Transparent"
    mc:Ignorable="d">

    <Border
        Width="600"
        Height="600"
        Padding="100,10"
        Background="#F9F7ED"
        BorderThickness="2"
        CornerRadius="10">
        <DockPanel LastChildFill="True">
            <Grid Height="500">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="24"
                    FontWeight="Bold">
                    <Run Text="Welcome To" />
                    <Run Text="Expenser" Foreground="DodgerBlue"/>
                </TextBlock>

                <StackPanel Grid.Row="1">
                    <TextBlock
                        Margin="10,20,10,5"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Username" />
                    <TextBox
                        x:Name="UsernameTxt"
                        Height="30"
                        Margin="10,0"
                        VerticalContentAlignment="Center"
                        FontSize="16" />
                </StackPanel>

                <StackPanel Grid.Row="2">
                    <TextBlock
                        Margin="10,20,10,5"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Password" />
                    <PasswordBox
                        x:Name="PasswordTxt"
                        Height="30"
                        Margin="10,0"
                        VerticalContentAlignment="Center"
                        FontSize="16" />
                </StackPanel>

                <StackPanel Grid.Row="3">
                    <TextBlock
                        Margin="10,20,10,5"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Confirm Password" />
                    <PasswordBox
                        x:Name="ConfirmPasswordTxt"
                        Height="30"
                        Margin="10,0"
                        VerticalContentAlignment="Center"
                        FontSize="16" />
                </StackPanel>

                <StackPanel Grid.Row="4">
                    <TextBlock
                        Margin="10,20,10,5"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Password Hint" />
                    <TextBox
                        x:Name="PasswordHintTxt"
                        Height="30"
                        Margin="10,0"
                        VerticalContentAlignment="Center"
                        FontSize="16" />
                </StackPanel>

                <DockPanel Grid.Row="5" LastChildFill="True">
                    <Button
                        x:Name="SignupBtn"
                        Height="50"
                        Margin="10,0"
                        IsDefault="True"
                        Background="#FF6200EE"
                        Click="SignupBtn_Click"
                        Content="Sign Up"
                        FontSize="18"
                        Foreground="White"
                        Style="{DynamicResource NavButton}" />
                </DockPanel>

                <StackPanel
                    Grid.Row="6"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="20,0,0,0"
                        HorizontalAlignment="Center"
                        FontSize="16"
                        Text="Already have an account? " />
                    <Button
                        x:Name="LoginLinkBtn"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Click="LoginLinkBtn_Click"
                        Content="Log In"
                        Cursor="Hand"
                        FontSize="16"
                        Foreground="#FF6200EE"
                        Style="{DynamicResource NavLinkBtn}" />
                </StackPanel>
            </Grid>
        </DockPanel>
    </Border>
</Page>
