<Window
    x:Class="Expenser.Pages.EditProfileWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Expenser.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="EditProfileWindow"
    Width="800"
    Height="600"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border
        Background="WhiteSmoke"
        BorderBrush="SteelBlue"
        BorderThickness="1"
        CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                Background="LightSteelBlue"
                BorderBrush="SteelBlue"
                BorderThickness="0,0,0,1"
                CornerRadius="10,10,0,0" />

            <Button
                x:Name="CloseBtn"
                Grid.Row="0"
                Width="50"
                Height="40"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Click="CloseBtn_Click"
                FontSize="24"
                Style="{StaticResource CloseBtn}" />

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    FontSize="24"
                    Margin="20,20,20,0"
                    Text="Edit Profile Details"
                    FontWeight="SemiBold"/>

                <StackPanel Grid.Row="1" Margin="20,10">
                    <Border BorderBrush="LightSteelBlue" Margin="0,10" BorderThickness="2" Background="White" CornerRadius="8">
                        <StackPanel>
                            <TextBlock Text="Name" FontSize="12" Foreground="SteelBlue" FontWeight="SemiBold" Margin="20,10,20,5" />
                            <TextBox x:Name="NameBox" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" FontSize="14" Width="200" HorizontalAlignment="Left" BorderBrush="SteelBlue" BorderThickness="1" Margin="20,0,0,10" Foreground="SteelBlue" />
                        </StackPanel>
                    </Border>

                    <Border BorderBrush="LightSteelBlue" Margin="0,10" BorderThickness="2" Background="White" CornerRadius="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0">
                                <TextBlock Text="Gender" FontSize="12" Foreground="SteelBlue" FontWeight="SemiBold" Margin="20,10,20,5" />
                                <ComboBox x:Name="GenderBox" Text="{Binding Gender, UpdateSourceTrigger=PropertyChanged}" FontSize="14" Width="200" HorizontalAlignment="Left" Padding="5" BorderBrush="SteelBlue" BorderThickness="1" Margin="20,0,0,10" Foreground="SteelBlue" >
                                    <ComboBoxItem Content="Male"/>
                                    <ComboBoxItem Content="Female"/>
                                    <ComboBoxItem Content="Other"/>
                                </ComboBox>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="0" Grid.Column="1">
                                <TextBlock Text="D.O.B." FontSize="12" Foreground="SteelBlue" FontWeight="SemiBold" Margin="20,10,20,5" />
                                <DatePicker x:Name="DobDatePicker" SelectedDate="{Binding DOB, UpdateSourceTrigger=PropertyChanged}" FontSize="14" Width="200" HorizontalAlignment="Left" Padding="5" BorderBrush="SteelBlue" BorderThickness="1" Margin="20,0,0,10" Foreground="SteelBlue" />
                            </StackPanel>
                            
                            <StackPanel Grid.Row="1" Grid.Column="0">
                                <TextBlock Text="Country" FontSize="12" Foreground="SteelBlue" FontWeight="SemiBold" Margin="20,10,20,5" />
                                <ComboBox x:Name="CountryBox" Text="{Binding Country, UpdateSourceTrigger=PropertyChanged}" IsEditable="True" IsTextSearchEnabled="True" FontSize="14" Padding="5" Width="200" HorizontalAlignment="Left" BorderBrush="SteelBlue" BorderThickness="1" Margin="20,0,0,10" Foreground="SteelBlue">
                                    <ComboBoxItem Content="India" />
                                    <ComboBoxItem Content="USA" />
                                    <ComboBoxItem Content="UK" />
                                    <ComboBoxItem Content="Canada" />
                                    <ComboBoxItem Content="Australia" />
                                    <ComboBoxItem Content="Germany" />
                                    <ComboBoxItem Content="France" />
                                    <ComboBoxItem Content="Japan" />
                                    <ComboBoxItem Content="China" />
                                    <ComboBoxItem Content="Brazil" />
                                    <ComboBoxItem Content="Russia" />
                                    <ComboBoxItem Content="South Africa" />
                                    <ComboBoxItem Content="Mexico" />
                                    <ComboBoxItem Content="Italy" />
                                    <ComboBoxItem Content="Spain" />
                                    <ComboBoxItem Content="Netherlands" />
                                    <ComboBoxItem Content="Sweden" />
                                    <ComboBoxItem Content="Norway" />
                                    <ComboBoxItem Content="Denmark" />
                                    <ComboBoxItem Content="Finland" />
                                    <ComboBoxItem Content="Belgium" />
                                    <ComboBoxItem Content="Switzerland" />
                                    <ComboBoxItem Content="Austria" />
                                    <ComboBoxItem Content="Ireland" />
                                    <ComboBoxItem Content="Portugal" />
                                    <ComboBoxItem Content="Greece" />
                                    <ComboBoxItem Content="Czech Republic" />
                                    <ComboBoxItem Content="Hungary" />
                                    <ComboBoxItem Content="Poland" />
                                    <ComboBoxItem Content="Romania" />
                                    <ComboBoxItem Content="Turkey" />
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="1">
                                <TextBlock Text="Preferred Currency" FontSize="12" Foreground="SteelBlue" FontWeight="SemiBold" Margin="20,10,20,5" />
                                <ComboBox x:Name="PrefCurrencyBox" IsEditable="True" IsTextSearchEnabled="True" Text="{Binding PreferredCurrency, UpdateSourceTrigger=PropertyChanged}" FontSize="14" Width="200" HorizontalAlignment="Left" BorderBrush="SteelBlue" BorderThickness="1" Padding="5" Margin="20,0,0,10" Foreground="SteelBlue" >
                                    <ComboBoxItem Content="Rupee (₹)" />
                                    <ComboBoxItem Content="Dollar ($)" />
                                    <ComboBoxItem Content="Euro (€)" />
                                    <ComboBoxItem Content="Pound (£)" />
                                    <ComboBoxItem Content="Yen (¥)" />
                                    <ComboBoxItem Content="Won (₩)" />
                                    <ComboBoxItem Content="Ruble (₽)" />
                                    <ComboBoxItem Content="Dirham (د.إ)" />
                                    <ComboBoxItem Content="Ringgit (RM)" />
                                    <ComboBoxItem Content="Baht (฿)" />
                                    <ComboBoxItem Content="Peso (₱)" />
                                    <ComboBoxItem Content="Real (R$)" />
                                    <ComboBoxItem Content="Riyal (ر.س)" />
                                    <ComboBoxItem Content="Rand (R)" />
                                    <ComboBoxItem Content="Forint (Ft)" />
                                    <ComboBoxItem Content="Krone (kr)" />
                                    <ComboBoxItem Content="Crown (Kč)" />
                                    <ComboBoxItem Content="Zloty (zł)" />
                                    <ComboBoxItem Content="Koruna (Kč)" />
                                    <ComboBoxItem Content="Crown (kr)" />
                                    <ComboBoxItem Content="Krona (kr)" />
                                    <ComboBoxItem Content="Kip (₭)" />
                                    <ComboBoxItem Content="Taka (৳)" />
                                    <ComboBoxItem Content="Tugrik (₮)" />
                                    <ComboBoxItem Content="Kyat (K)" />
                                </ComboBox>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border BorderBrush="LightSteelBlue" Margin="0,10" BorderThickness="2" Background="White" CornerRadius="8">
                        <StackPanel>
                            <TextBlock Text="Phone" FontSize="12" Foreground="SteelBlue" FontWeight="SemiBold" Margin="20,10,20,5" />
                            <TextBox x:Name="ContactBox" Text="{Binding Contact, UpdateSourceTrigger=PropertyChanged}" FontSize="14" Width="200" HorizontalAlignment="Left" BorderBrush="SteelBlue" BorderThickness="1" Margin="20,0,0,10" Foreground="SteelBlue" />

                            <TextBlock Text="Email" FontSize="12" Foreground="SteelBlue" FontWeight="SemiBold" Margin="20,10,20,5" />
                            <TextBox x:Name="EmailBox" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" FontSize="14" MinWidth="200" Width="auto" HorizontalAlignment="Left" BorderBrush="SteelBlue" BorderThickness="1" Margin="20,0,0,10" Foreground="SteelBlue" />
                        </StackPanel>
                    </Border>

                    <Button
                        x:Name="SaveBtn"
                        Width="80"
                        Height="40"
                        HorizontalAlignment="Right"
                        Margin="20,10"
                        Background="SteelBlue"
                        BorderBrush="SteelBlue"
                        Click="SaveBtn_Click"
                        Content="Save"
                        FontSize="14"
                        Foreground="White" />
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
